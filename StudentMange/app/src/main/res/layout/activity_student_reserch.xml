<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">



    <RelativeLayout
            android:id="@+id/sqlite_layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
        >
        <TextView
                android:id="@+id/sqlite_tv_name"
                android:text="姓名："
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/sqlite_et_name"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/sqlite_tv_name"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/sqlite_layout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/sqlite_layout_2">

        <TextView
                android:id="@+id/sqlite_tv_number"
                android:text="学号："
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/sqlite_et_number"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/sqlite_tv_number"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/sqlite_layout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/sqlite_layout_3">

        <TextView
                android:id="@+id/sqlite_tv_score"
                android:text="成绩："
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <EditText
                android:id="@+id/sqlite_et_score"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@id/sqlite_tv_score"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/sqlite_layout_5"
            android:layout_below="@id/sqlite_layout_4"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/sqlite_btn_insert"
                android:text="插入"
                android:textColor="#0000dd"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/rounded_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/sqlite_btn_query"
                android:text="查询"
                android:textColor="#F44336"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/rounded_button"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/sqlite_layout_6"
            android:layout_below="@id/sqlite_layout_5"
            android:layout_margin="30dp"
            android:background="@drawable/layer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/sqlite_tv_1"
                android:text="查询结果："
                android:textSize="20dp"
                android:layout_margin="8dp"
                android:textColor="#181919"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ScrollView
                android:id="@+id/sqlite_sv_result"
                android:layout_below="@+id/sqlite_tv_1"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/sqlite_tv_result"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>

</RelativeLayout>