<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">



    <RelativeLayout
        android:id="@+id/sqlite_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">
        <TextView
            android:id="@+id/courseName"
            android:text="课程名称："
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/sqlite_et_name"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/courseName"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sqlite_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sqlite_layout_2">

        <TextView
            android:id="@+id/stu_number"
            android:text="学生学号："
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/sqlite_et_number"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/stu_number"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sqlite_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sqlite_layout_3">

        <TextView
            android:id="@+id/sqlite_tv_score"
            android:text="学生成绩："
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/stu_score"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/sqlite_tv_score"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sqlite_layout_5"
        android:layout_below="@id/sqlite_layout_4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/sqlite_btn_query"
            android:text="插入"
            android:textColor="#F44336"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:layout_marginRight="40dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</RelativeLayout>