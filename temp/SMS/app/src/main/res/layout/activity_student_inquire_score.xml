<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/sqlite_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sqlite_btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sqlite_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sqlite_layout_1"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/sqlite_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="学期："
            android:textSize="25dp" />

        <EditText
            android:id="@+id/sqlite_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/sqlite_tv_name"
            android:inputType="text" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sqlite_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sqlite_layout_2"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/sqlite_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="课程："
            android:textSize="25dp" />

        <EditText
            android:id="@+id/sqlite_et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/sqlite_tv_number"
            android:inputType="number" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sqlite_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sqlite_layout_3"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/sqlite_tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="173dp"
            android:layout_marginLeft="173dp"
            android:layout_marginEnd="180dp"
            android:layout_marginRight="180dp" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/sqlite_layout_5"
            android:layout_below="@id/sqlite_layout_4"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/sqlite_btn_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="查询结果："
            android:textColor="#0000dd"

            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
                android:id="@+id/sqlite_btn_query"
                android:text="查询"
                android:textColor="#F44336"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginRight="40dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/sqlite_layout_6"
            android:layout_below="@id/sqlite_layout_5"
            android:layout_margin="30dp"
            android:background="@drawable/layer_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ListView
            android:id="@+id/scoreView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>